<html>
    <body>
    @for(int i = 1; i <= 10; i++)
    {
        <br/>@i
    }
    @{
        int sumfor(int n)
        {
            int sum = 0;
            for(int i = 1; i <= n; i++)
            {
                sum = sum +i;
            }
            return sum;
        }
        int n = 15;
        int sum = sumfor(n);
        <p>Sum = @sum</p>
    }
</body>
</html>
